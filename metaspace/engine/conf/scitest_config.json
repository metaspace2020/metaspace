{
  "bottle": {
    "host": "0.0.0.0",
    "port": 5123,
    "debug": false,
    "server": "cherrypy"
  },
  "db": {
    "host": "localhost",
    "database": "sm_test",
    "user": "sm",
    "password": "password"
  },
  "elasticsearch": {
    "index": "sm_test",
    "host": "localhost",
    "port": "9200",
    "user": "elastic",
    "password": "elastic"
  },
  "rabbitmq": {
    "host": "localhost",
    "user": "sm",
    "password": "password"
  },
  "services": {
    "img_service_url": "http://localhost:4201",
    "mol_db": "http://localhost:5001/v1",
    "web_app_url": "http://localhost:8082",
    "send_email": false,
    "update_daemon_threads": 4
  },
  "fs": {
    "spark_data_path": "/tmp/metaspace",
    "s3_base_path": ""
  },
  "spark": {
    "master": "local[4]",
    "spark.serializer": "org.apache.spark.serializer.KryoSerializer",
    "spark.rdd.compress": true,
    "spark.ui.showConsoleProgress": false,
    "spark.sql.execution.arrow.enabled": true
  },
  "lithops": {
    "lithops": {
      "storage_bucket": "metaspace-sci-test",
      "storage": "localhost",
      "mode": "localhost",
      "include_modules": ["engine/sm"],
      "data_cleaner": true,
      "data_limit": false,
      "workers": 4
    },
    "localhost": {
    },
    "sm_storage": {
      "imzml": ["metaspace-sci-test", "imzml"],
      "moldb": ["metaspace-sci-test", "moldb"],
      "centroids": ["metaspace-sci-test", "centroids"],
      "pipeline_cache": ["metaspace-sci-test", "pipeline_cache"]
    }
  },
  "slack": {
    "channel": "",
    "webhook_url": ""
  },
  "isotope_storage": {
    "path": "/tmp/isotope_storage"
  },
  "logs": {
    "version": 1,
    "formatters": {
      "sm": {
        "format": "%(asctime)s - %(levelname)s - %(name)s[%(threadName)s] - %(filename)s:%(lineno)d - %(message)s"
      }
    },
    "handlers": {
      "console_debug": {
        "class": "logging.StreamHandler",
        "formatter": "sm",
        "level": "DEBUG"
      },
      "context_logger": {
        "class": "sm.engine.utils.log_capture.ContextLogHandler",
        "formatter": "sm",
        "level": "INFO"
      }
    },
    "root": {
      "handlers": [
        "console_debug",
        "context_logger"
      ],
      "level": "INFO"
    },
    "loggers": {
      "engine": {
        "level": "DEBUG"
      },
      "engine.db": {
        "level": "INFO"
      },
      "engine.lithops-wrapper": {
        "level": "INFO"
      },
      "api": {
        "level": "INFO"
      },
      "annotate-daemon": {
        "level": "INFO"
      },
      "lithops-daemon": {
        "level": "INFO"
      },
      "update-daemon": {
        "level": "INFO"
      },
      "lithops": {
        "level": "WARNING"
      },
      "lithops.invokers": {
        "level": "WARNING"
      },
      "lithops.executors": {
        "level": "WARNING"
      }
    }
  },
  "ds_config_defaults": {
    "adducts": {
      "+": ["+H", "+Na", "+K"],
      "-": ["-H", "+Cl" ]
    }
  },
  "storage": {
    "endpoint_url": "http://storage:9000",
    "access_key_id": "minioadmin",
    "secret_access_key": "minioadmin"
  },
  "image_storage": {
    "bucket": "sm-image-storage-sci-test"
  }
}
