{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/METASPACE2020/metadata/master/min%20metadata%20schema.json",
  "title": "Metadata Submission",
  "description": "Minimal metadata for imaging mass spectrometry (imaging MS) as developed in the METASPACE project",
  "type": "object",
  "definitions": {
    "person": {
      "type": "object",
      "required": ["Surname", "First_Name", "Email"],
      "properties": {
        "Surname": {
          "type": "string"
        },
        "First_Name": {
          "type": "string"
        },
        "Email": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "Sample_Information": {
      "type": "object",
      "required": ["Organism", "Organism_Part", "Condition"],
      "properties": {
        "Organism": {
          "type": "string"
        },
        "Organism_Part": {
          "type": "string"
        },
        "Condition": {
          "type": "string"
        },
        "Sample_Growth_Conditions": {
          "type": "string"
        }
      }
    },
    "Sample_Preparation": {
      "type": "object",
      "required": ["Sample_Stabilisation", "Tissue_Modification",
                   "MALDI_Matrix", "MALDI_Matrix_Application"],
      "properties": {
        "Sample_Stabilisation": {
          "type": "string"
        },
        "Tissue_Modification": {
          "type": "string"
        },
        "MALDI_Matrix": {
          "type": "string"
        },
        "MALDI_Matrix_Application": {
          "type": "string"
        }
      }
    },
    "MS_Analysis": {
      "type": "object",
      "required": ["Polarity", "Ionisation_Source", "Analyzer"],
      "properties": {
        "Polarity": {
          "type": "string",
          "enum": [
            "Positive",
            "Negative"
          ]
        },
        "Ionisation_Source": {
          "type": "string"
        },
        "Analyzer": {
          "type": "string"
        },
        "Detector_Resolving_Power": {
          "type": "object",
          "title": "Detector Resolving Power",
          "required": ["mz", "Resolving_Power"],
          "properties": {
            "mz": {
              "type": "number",
              "minimum": 50,
              "maximum": 5000,
              "default": 200
            },
            "Resolving_Power": {
              "type": "number",
              "minimum": 10000,
              "maximum": 1000000
            }
          }
        }
      }
    },
    "Submitted_By": {
      "type": "object",
      "required": ["Institution", "Submitter"],
      "properties": {
        "Institution": {
          "type": "string"
        },
        "Submitter": {
          "$ref": "#/definitions/person"
        },
        "Principal_Investigator": {
          "$ref": "#/definitions/person"
        }
      }
    },
    "metaspace_options":{
      "type": "object",
      "required": ["Metabolite_Database", "Dataset_Name"],
      "properties":{
        "Metabolite_Database": {
            "type": "string"
        },
      "Dataset_Name":{
          "type": "string"
       }
      }
    },
    "Additional_Information": {
      "type": "object",
      "properties": {
        "Publication_DOI": {
          "type": "string"
        },
        "Sample_Description_Freetext": {
          "type": "string"
        },
        "Sample_Preparation_Freetext": {
          "type": "string"
        },
        "Additional_Information_Freetext": {
          "type": "string"
        },
        "Expected_Molecules_Freetext": {
          "type": "string"
        }
      }
    }
  }
}
