stage:

# SOFTWARE CONFIGURATION

aws_access_key_id: ""
aws_secret_access_key: ""
aws_key_name: ""
aws_region: eu-west-1

postgres_version: 9.5
postgres_host: "{{ hostvars['web'].ansible_ssh_host }}"
