kibana_password:

rabbitmq_version: 3.6.8-1
rabbitmq_host: "{{ hostvars['web'].ansible_ssh_host }}"
rabbitmq_user: sm
rabbitmq_password:

miniconda_version: latest
miniconda_python: 2
